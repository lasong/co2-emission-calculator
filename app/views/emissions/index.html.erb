<h1 class="text-2xl font-bold mb-4">Emissions</h1>

<table class="min-w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">File Name</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Uploaded At</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @emissions.each do |emission| %>
      <tr>
        <td class="px-6 py-4 whitespace-nowrap"><%= emission.name %></td>
        <td class="px-6 py-4 whitespace-nowrap"><%= emission.file.filename %></td>
        <td class="px-6 py-4 whitespace-nowrap"><%= emission.created_at.strftime("%B %d, %Y %H:%M") %></td>
        <td class="px-6 py-4 whitespace-nowrap">
          <%= link_to 'Show', emission_path(emission), class: "text-indigo-600 hover:text-indigo-900" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Upload New Emission File', new_emission_path, class: "mt-4 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
