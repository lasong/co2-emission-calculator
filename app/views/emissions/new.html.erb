<div class="w-1/2 md:w-1/3 m-auto">
  <h1 class="block text-2xl font-bold">Upload Emission</h1>
  <%= form_with model: @emission, local: true, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm sm:text-sm" %>
    </div>
    <div>
      <%= form.label :file, class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :file, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm sm:text-sm" %>
    </div>
    <div>
      <%= form.submit "Upload", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>
